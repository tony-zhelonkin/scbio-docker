# Dockerfile for AI-enabled scbio-docker image
FROM scdock-r-dev:v0.5.2

# Copy the SciAgent-toolkit submodule into the image
COPY ./toolkits/SciAgent-toolkit /opt/SciAgent-toolkit

# Install the SciAgent-toolkit
RUN /bin/bash /opt/SciAgent-toolkit/scripts/setup_mcp_infrastructure.sh --install-all

# Set permissions for the user
RUN chown -R ${USER_ID}:${GROUP_ID} /opt/SciAgent-toolkit
